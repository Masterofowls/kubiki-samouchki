---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
import Card from '../../components/Card.astro';

const cases = [
  { name: 'Именительный', question: 'Кто? Что?', example: 'книга' },
  { name: 'Родительный', question: 'Кого? Чего?', example: 'книги' },
  { name: 'Дательный', question: 'Кому? Чему?', example: 'книге' },
  { name: 'Винительный', question: 'Кого? Что?', example: 'книгу' },
  { name: 'Творительный', question: 'Кем? Чем?', example: 'книгой' },
  { name: 'Предложный', question: 'О ком? О чём?', example: 'о книге' }
];
---

<Layout title="Собери падежи">
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-purple-50 py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-8 text-center">Собери падежи</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
          {cases.map(item => (
            <div class="bg-white rounded-xl shadow-lg p-6 transform hover:-translate-y-1 transition-transform">
              <h3 class="text-xl font-bold mb-2 text-blue-600">{item.name} падеж</h3>
              <p class="text-gray-600 mb-2">Вопросы: {item.question}</p>
              <p class="text-gray-800">Пример: <span class="font-semibold">{item.example}</span></p>
            </div>
          ))}
        </div>

        <div class="bg-white rounded-xl shadow-xl p-8 mb-12">
          <h2 class="text-2xl font-semibold mb-6">Как играть</h2>
          <div class="space-y-4">
            <p class="text-gray-600">
              1. Возьмите карточку с существительным в именительном падеже
            </p>
            <p class="text-gray-600">
              2. Попробуйте просклонять это слово по всем падежам
            </p>
            <p class="text-gray-600">
              3. Проверьте правильность с помощью карточек-ответов
            </p>
            <p class="text-gray-600">
              4. Составьте предложения с этим словом в разных падежах
            </p>
          </div>
        </div>

        <div class="bg-gradient-to-br from-blue-600 to-purple-600 text-white rounded-xl shadow-xl p-8 mb-12">
          <h2 class="text-2xl font-semibold mb-4">Совет от логопеда</h2>
          <p class="text-lg">
            Начинайте с простых, часто используемых слов. Постепенно усложняйте задания,
            добавляя слова с чередованием согласных и беглыми гласными.
          </p>
        </div>

        <div class="text-center">
          <Button variant="gradient" size="lg" href="/games">
            Вернуться к играм
          </Button>
        </div>
      </div>
    </div>
  </div>
</Layout>
