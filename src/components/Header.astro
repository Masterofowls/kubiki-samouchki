---
import Navigation from './Navigation.astro';

interface Props {
  variant?: 'transparent' | 'solid';
  showTelegramButton?: boolean;
}

const { variant = 'solid', showTelegramButton = true } = Astro.props;
---

<header class="fixed top-0 z-50 w-full transition-all duration-300">
  <div class="absolute inset-0 bg-white border-b border-slate-200/80 shadow-sm shadow-slate-200/50"></div>
  <div class="absolute inset-0 bg-gradient-to-r from-sky-50/50 via-transparent to-emerald-50/50 mix-blend-multiply"></div>
  <div class="absolute inset-0 backdrop-blur-md"></div>
  <Navigation variant={variant} showTelegramButton={showTelegramButton} />
</header>
